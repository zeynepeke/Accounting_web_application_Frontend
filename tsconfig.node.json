{
    "compilerOptions": {
      "target": "ES2020",               // Node.js'in desteklediği ES sürümü
      "module": "CommonJS",             // Node.js modül sistemi
      "moduleResolution": "node",       // Node.js modül çözümleme
      "outDir": "./dist",               // Derlenmiş dosyaların çıkış dizini
      "rootDir": "./src",               // Kaynak dosyaların kök dizini
      "strict": true,                   // Katı tür denetimleri
      "esModuleInterop": true,          // ES6 modülleri ile uyumluluk
      "skipLibCheck": true,             // Kütüphane dosyalarının tür kontrolünü atla
      "forceConsistentCasingInFileNames": true // Dosya adlarında tutarlılık
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  